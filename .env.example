# .env.example

# Apify API Token
# Get from: https://console.apify.com/account/integrations
APIFY_API_TOKEN=your_apify_token_here

# Pokemon TCG API Key (optional but recommended for higher rate limits)
# Get from: https://dev.pokemontcg.io/
POKEMON_TCG_API_KEY=your_pokemon_api_key_here

# Groq API Key
# Get from: https://console.groq.com/
GROQ_API_KEY=your_groq_api_key_here

# Database Configuration
DATABASE_URL=sqlite:///data/database.db

# Scraping Configuration
SCRAPE_INTERVAL_HOURS=6
MAX_CARDS_PER_SCRAPE=100

# Arbitrage Calculator Settings
MIN_PROFIT_THRESHOLD=5.00
MIN_PROFIT_PERCENTAGE=15.0

# Optional: Enable debug logging
DEBUG=False
